<h2 style="text-align: center; margin-bottom: 20px;">Templates</h2>

<div style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: center;">
  <% templates.forEach(template => { %>
    <div style="width: 250px; border: 1px solid #ccc; border-radius: 10px; padding: 15px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); text-align: center;">
      
      <% if (template.previewImage) { %>
        <img src="<%= template.previewImage %>" alt="Template Preview" style="width: 100%; height: 150px; object-fit: cover; border-radius: 6px;">
      <% } else { %>
        <div style="width: 100%; height: 150px; background: #eee; border-radius: 6px; display: flex; align-items: center; justify-content: center; color: #aaa;">
          No Image
        </div>
      <% } %>

      <h3 style="margin: 10px 0;"><%= template.templateName %></h3>

      <% if (template.description) { %>
        <p style="font-size: 14px; color: #555;"><%= template.description %></p>
      <% } %>

      <a href="/site/customize/<%= template.templateId %>" style="display: inline-block; margin-top: 10px; padding: 8px 12px; background: #007BFF; color: white; border-radius: 5px; text-decoration: none;">
        Select
      </a>
    </div>
  <% }) %>
</div>
