<h2 style="font-size: 24px; margin-bottom: 16px;">My Sites</h2>

<div style="display: flex; flex-wrap: wrap; gap: 15px;">
  <% sites.forEach(site => { %>
    <div style="border: 1px solid #ddd; border-radius: 8px; padding: 12px; width: 100%; max-width: 300px; background: #fff; box-shadow: 1px 1px 5px rgba(0,0,0,0.05);">

     <div style="width: 100%; height: 150px; border-radius: 6px; margin-bottom: 8px; background-color: #f0f0f0; display: flex; align-items: center; justify-content: center; overflow: hidden;">
  <% if (site.fields.logoUrl) { %>
    <img src="<%= site.fields.logoUrl %>" alt="Logo" style="max-width: 100%; max-height: 100%;" />
  <% } else { %>
    <span style="color: #aaa; font-size: 14px;">No Logo</span>
  <% } %>
</div>


      <h3 style="font-size: 18px; margin: 8px 0;"><%= site.fields.businessName || 'Unnamed Site' %></h3>
      <p style="font-size: 14px; margin: 4px 0;"><strong>Template:</strong> <%= site.templateId %></p>
      <p style="font-size: 14px; margin: 4px 0;"><strong>Created:</strong> <%= site.createdAt.toDateString() %></p>

      <div style="display: flex; justify-content: flex-start; gap: 10px; margin-top: 10px;">
        <a href="http://<%= site.subdomain %>.localhost:3000" title="View Site" target="_blank">
          <img src="/icons/arrow-up-right-from-square-solid.svg" alt="View" width="18">
        </a>
        <a href="/site/customize/<%= site.templateId %>" title="Edit Site">
          <img src="/icons/pen-to-square-solid.svg" alt="Edit" width="18">
        </a>
        <a href="/site/<%= site._id %>" title="Settings">
          <img src="/icons/gear-solid.svg" alt="Settings" width="18">
        </a>
      </div>

    </div>
  <% }) %>
</div>
